@using KUSUS_Demo.DataAccessEFCore.ViewModels

@model List<StudentDetailVM>

@{
    Layout = null;
}
@foreach (var item in Model)
{
    <h1>@item.StudentId Numbered Student Page</h1>

    <div class="row">
        <div class="col-6 text-black-50">Student Number: </div>
        <div class="col-6">@item.StudentId</div>
    </div>

    <div class="row">
        <div class="col-6 text-black-50">Student Name: </div>
        <div class="col-6">@item.FirstName</div>
    </div>

    <div class="row">
        <div class="col-6 text-black-50">Student Surname: </div>
        <div class="col-6">@item.LastName</div>
    </div>
    break;
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-4 text-black-50">Courses Taken By The Student; </div>
        <div class="col-4">@item.NameOfCourse</div>
        <div class="col-4"><a asp-action="DeleteCourseOfStudent" asp-controller="Home" asp-route-CourseId="@item.CourseId" asp-route-StudentId="@item.StudentId" class="btn btn-danger">Delete</a></div>
    }
</div>
