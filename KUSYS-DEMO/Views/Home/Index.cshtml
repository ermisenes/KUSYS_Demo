@using KUSYS_DEMO.Domain.Entities
@model List<Student>
@{
    ViewData["Title"] = "Students";
}
<div class="row">
    <div class="col-12 text-black-50"></div>
    <div class="col-5">
        <a onclick="showInPopUp('@Url.Action("Create","Home",null,Context.Request.Scheme)')" class="btn btn-primary">Add Student</a>
    </div>
</div>
<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Student Id</th>
                <th scope="col">Student Name</th>
                <th scope="col">Student Surname</th>
                <th scope="col">Student Birthday</th>
                <th scope="col">#</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.StudentId</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.BirthDate</td>
                    <td>
                    <a asp-action="Delete" asp-controller="Home" asp-route-id="@item.StudentId" class="btn btn-danger">Delete</a>
                    <a asp-action="Update" asp-controller="Home" asp-route-id="@item.StudentId" class="btn btn-primary">Update</a>
                    <a onclick="showInPopUp('@Url.Action("Detail","Home",new {id=item.StudentId },Context.Request.Scheme)', 'Detail')" class="btn btn-secondary">Details</a>
                    <a asp-action="AddCourse" asp-controller="Home" asp-route-id="@item.StudentId" class="btn btn-success">Add Course</a>
                </td>
                </tr>
            }
        </tbody>
    </table>
</div>



