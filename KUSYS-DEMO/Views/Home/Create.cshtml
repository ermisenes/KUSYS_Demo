@using KUSUS_Demo.DataAccessEFCore.ViewModels
@model StudentVM

@{ 
    Layout = null;
}

<h1>Öğrenci Ekle</h1>

<div class="bg-danger">
    <div asp-validation-summary="All">
    </div>
</div>

<form method="post" asp-action="Create" asp-controller="Home">

    <div class="row">
        <div class="col-6 text-black-50">Student Number</div>
        <div class="col-6">
            <input asp-for="StudentId" class="form-control" />
        </div>
    </div>

    <div class="row">
        <div class="col-6 text-black-50">Student Name</div>
        <div class="col-6">
            <input asp-for="FirstName" class="form-control" />
        </div>
    </div>

    <div class="row">
        <div class="col-6 text-black-50">Student Surname</div>
        <div class="col-6">
            <input asp-for="LastName" class="form-control" />
        </div>
    </div>

    <div class="row">
        <div class="col-6 text-black-50">Student Birth Date</div>
        <div class="col-6">
            <input asp-for="BirthDate" class="form-control" />
        </div>
    </div>


    <div class="row">
        <div class="col-3 text-black-50"></div>
        <div class="col-5">
            <input type="submit" value="Add" class="btn btn-danger" />
        </div>
    </div>
</form>
